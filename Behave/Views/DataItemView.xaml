<UserControl x:Class="Behave.Views.DataItemView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" LostFocus="UserControl_LostFocus">
    <StackPanel Orientation="Horizontal">
        <TextBox Text="{Binding Data}" 
                 Focusable="True" 
                 FontSize="12" 
                 BorderThickness="1" 
                 Padding="1" 
                 MinHeight="25" 
                 MinWidth="400" Background="{StaticResource SemiTransparentWhiteBrushKey}" VerticalContentAlignment="Center" MaxWidth="400" ToolTip="name=value" MaxHeight="25" />
        <Button DataContext="{Binding}" Content="Del" FontWeight="Bold" Background="{StaticResource MedTurquoiseBrushKey1}" Foreground="White" FontSize="16" ToolTip="Delete Parameter" Width="37" Padding="1,2" />
    </StackPanel>
</UserControl>
